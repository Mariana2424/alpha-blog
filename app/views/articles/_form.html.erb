
<% if @article.errors.any? %>
<h2>The following errors prevented the article from creating</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_for @article do |m| %>
  <p>
    <%= m.label :title %> <br/>
    <%= m.text_field :title %>
  </p>
  <p>
    <%= m.label :description %>
    <%= m.text_area :description %>
  </p>
  <p>
    <%= m.submit %>
  </p>
<% end %>

<%= link_to "Back to articles listing", articles_path %>